#import "ZMNavigationItemButton.h"

@implementation ZMNavigationItemButton

-(id)initWithFrame:(CGRect)frame title:(NSString *)title fontName:(NSString *)fontName fontSize:(CGFloat)fontSize
{
    self = [super initWithFrame:frame];
    if (self) {
        [self setBackgroundColor:[UIColor clearColor]];
        [self setTitle:title forState:UIControlStateNormal];
        [self setTitleColor:[UIColor whiteColor] forState:UIControlStateNormal];
        [self.titleLabel setFont:[UIFont fontWithName:fontName size:fontSize]];
    }
    return self;
}

